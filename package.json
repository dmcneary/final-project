{
  "name": "fit-monkeys",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd fit-monkeys && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd fit-monkeys && npm install",
    "build": "cd fit-monkeys && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-mongo": "^2.0.3",
    "cookie-parser": "^1.4.4",
    "debug": "~2.6.9",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "http-errors": "~1.6.2",
    "leaflet-routing-machine": "^3.2.12",
    "mongoose": "^5.5.7",
    "morgan": "~1.9.0",
    "mysql": "^2.17.1",
    "nodemon": "^1.19.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "react-bootstrap": "^1.0.0-beta.8",
    "react-router-dom": "^5.0.0",
    "if-env": "^1.0.4"
  },
  "devDependencies": {
    "concurrently": "^4.1.0"
  }
}
